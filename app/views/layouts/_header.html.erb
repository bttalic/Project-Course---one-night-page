<header class="navbar  navbar-inverse navbar-top">
  <div class="navbar-inner">
    <div class="container">

     
      <%= link_to "CS-IUS", root_path, id: "headerlogo" %>

      <nav>
        <ul class="nav pull-right">
          <li><%= link_to "Home", root_path %></li>
          <% if signed_in? %>

            <li id="fat-menu" class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Professors <b class="caret"></b>
              </a>
           <ul class="dropdown-menu">
              <% profs=User.where(:professor=>true) %>
              <% profs.each do |prof| %>
              <li><%= link_to prof.name, prof %></li>
              <%end%>
           </ul>
         </li>

          <li id="fat-menu" class="dropdown">
           

           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Courses <b class="caret"></b>
              </a>
           <ul class="dropdown-menu">
             <% courses = current_user.listened_courses %>
              <% courses.each do |course| %>
              <li><%= link_to course.name, course %></li>
              <%end%>
            <li class="divider"></li>
              <% courses=Course.all %>
              <% courses.each do |course| %>
              <li><%= link_to course.name, course %></li>
              <%end%>
           </ul>
         </li>

          <% if current_user.admin? %>
            <li><%= link_to "Users", users_path %></li>
            <%end%>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                 <% if current_user.professor? %>
                 <li><%= link_to "Add Course", '/addcourse' %></li>
                 <%end%>
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Feed", '/notifications' %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>

               <li id="fat-menu" class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Courses <b class="caret"></b>
              </a>
           <ul class="dropdown-menu">
              <% courses=Course.all %>
              <% courses.each do |course| %>
              <li><%= link_to course.name, course %></li>
              <%end%>
           </ul>
         </li>

           <li id="fat-menu" class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Professors <b class="caret"></b>
              </a>
           <ul class="dropdown-menu">
              <% profs=User.where(:professor=>true) %>
              <% profs.each do |prof| %>
              <li><%= link_to prof.name, prof %></li>
              <%end%>
           </ul>
         </li>


            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>