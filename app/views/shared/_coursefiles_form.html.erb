<%= form_for(@coursefile, :html => { :multipart => true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :course_id %>
  <%= f.label :name %>
    <%= f.text_field :name %>
  <div class="field">
    <%= f.text_area :description, placeholder: "Add description" , class:"input-xsmall"%>
  </div>
  <%= f.file_field :file %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>