<li>
  <span class="content"> <%= link_to feed2_item.name+" (Download)", feed2_item.file.url(false) %> for  <%= link_to feed2_item.course.name, feed2_item.course %></br><%=feed2_item.description %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(feed2_item.created_at) %> ago.
 
  <% if current_user?(feed2_item.course.user) %>
    <%= link_to "delete", feed2_item, method: :delete,
                                     data: { confirm: 'You sure?' },
                                     title: feed2_item.name %>
  <% end %>
</span>
</li>