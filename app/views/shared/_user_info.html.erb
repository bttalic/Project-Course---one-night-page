<a href="<%= user_path(current_user) %>">
		<% if(current_user.avatar?) %>
		<%= image_tag current_user.avatar.url(), class:"avatar" %>
		<% else %>
		<%= image_tag ("user_default.png"), class:"avatar" %>
		<% end %>
	</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
