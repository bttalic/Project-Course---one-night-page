<li>
  <span class="content"><%= notification.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(notification.created_at) %> ago.
 
  <% if current_user?(notification.course.user) %>
    <%= link_to "delete", notification, method: :delete,
                                     data: { confirm: 'You sure?' },
                                     title: notification.content %>
  <% end %>
</span>
</li>